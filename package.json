{
  "name": "btsr",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "build": "yarn --cwd client build && yarn --cwd server build"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
